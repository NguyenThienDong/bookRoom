<!DOCTYPE html>
<html lang="vn">

<head>
    <%- include('./header.ejs')%>
    <script>
        $(document).ready(function () {
            fetch(`http://localhost:4001/getdoubleroom`, {
                headers: {
                    'Accept': 'application/json',
                    'Content-type': 'application/json'
                },
                method: 'GET'
            })
                .then(res => res.json())
                .then(res => {
                    res.data.map((el, i) => {
                        $('#bodyTable').append(`<tr>
                                            <td>${i+1}</td>
                                            <td>${el.name}</td>
                                            <td><img width=100px src="/images/${el.image} " ></td>
                                            <td>${el.price} VNĐ/đêm</td>
                                            <td>${el.description}</td>
                                            <td style="color:blue"><td style="color:blue"><a href="${el._id}"><img src="/images/edit.png" width="25px"></a></td></td>
                                            <td style="color:red"><td style="color:blue"><a href="deleteRoomDouble/${el._id}"><img src="/images/delete.jpg" width="25px"></a></td></td>
                                        </tr>`)
                    })

                })
        })
    </script>
</head>

